<h1 class="input">Edit your profile:</h1>

<div class="form-container">
    <form method="POST">
        <div class="sub-form-div">
            <div class="input-container">
                <input type="text" required name="fname" autocomplete="off" value="{{fname}}">
                <div class="input-label">First Name</div>
            </div>
            <div class="input-container">
                <input type="text" required name="lname" autocomplete="off" value="{{lname}}">
                <div class="input-label">Last Name</div>
            </div>
            <div class="input-container">
                <input type="email" required name="email" autocomplete="off" value="{{email}}">
                <div class="input-label">Email Address</div>
            </div>
            <div class="input-container">
                <input type="password" name="password" autocomplete="off" placeholder="**********">
                <div class="input-label">Password</div>
            </div>
            <div class="input-container">
                <input type="number" name="age" autocomplete="off" value="{{age}}">
                <div class="input-label">Age</div>
            </div>
            <div class="input-container">
                <input type="text" name="city" autocomplete="off" value="{{city}}">
                <div class="input-label">City</div>
            </div>
            <div class="input-container">
                <input type="text" name="url" autocomplete="off" value="{{url}}">
                <div class="input-label">Website</div>
            </div>
        </div>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button type='submit'>UPDATE</button>
    </form>
</div>
